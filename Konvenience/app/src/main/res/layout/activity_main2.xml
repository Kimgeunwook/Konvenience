<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_grain"
        android:layout_gravity="center"
        android:gravity="center">

    <TextView
            android:text="LOGIN"
            android:textSize="40sp"
            android:textColor="@color/txt_green"
            android:fontFamily="@font/baemin_hanna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
    android:layout_marginBottom="50dp"/>

    <EditText
            android:id="@+id/et_email0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:background="@color/cardview_light_background"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="이메일 입력"
            android:textSize="17sp"
            android:textColor="@color/txt_green"
            android:fontFamily="@font/nanum_square_r"
            android:layout_margin="10dp"/>

    <EditText
            android:id="@+id/et_password0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:inputType="textPassword"
            android:ems="10"
            android:background="@color/cardview_light_background"
            android:hint="비밀번호 입력"
            android:textSize="17sp"
            android:textColor="@color/txt_green"
            android:fontFamily="@font/nanum_square_r"
            android:layout_margin="10dp"/>

    <Button
            android:id="@+id/bt_login"
            android:text="로그인"
            android:textSize="16sp"
            android:fontFamily="@font/baemin_hanna_air"
            android:textColor="@color/redbean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="50dp"
            android:background="@drawable/bg_btn2"/>

    <Button
            android:id="@+id/bt_create"
            android:text="회원가입"
            android:textSize="16sp"
            android:fontFamily="@font/baemin_hanna_air"
            android:textColor="@color/redbean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="45dp"
            android:background="@drawable/bg_btn2"/>

    <Button
            android:id="@+id/bt_logout"
            android:text="로그아웃"
            android:textSize="16sp"
            android:fontFamily="@font/baemin_hanna_air"
            android:textColor="@color/redbean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="45dp"
            android:background="@drawable/bg_btn2"/>

    <TextView
            android:id="@+id/tv_message"
            android:text=""
            android:textColor="@color/txt_redbean_dark"
            android:textSize="16sp"
            android:fontFamily="@font/baemin_hanna_air"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



</LinearLayout>