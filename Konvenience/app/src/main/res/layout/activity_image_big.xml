<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".imageBig">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:srcCompat="@drawable/common_full_open_on_phone"
            android:id="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
            android:text="Button"
            android:layout_width="78dp"
            android:layout_height="78dp"
            style="?android:attr/borderlessButtonStyle"
            android:src="@drawable/xx"
            android:scaleType="fitXY"
            android:id="@+id/imageBig_btn" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="26dp" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
