<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_grain"
              android:layout_gravity="center"
              android:gravity="center">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>


    <TextView
            android:text="JOIN"
            android:textSize="40sp"
            android:textColor="@color/txt_green"
            android:fontFamily="@font/baemin_hanna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"/>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="5dp">

        <TextView
                android:text="구분:"
                android:textSize="18sp"
                android:fontFamily="@font/baemin_hanna_air"
                android:textColor="@color/txt_redbean_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"/>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn4">

            <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:entries="@array/spin_arr"
                    android:prompt="@string/spin_prompt"
                    android:spinnerMode="dropdown"/>

        </LinearLayout>


    </LinearLayout>


    <EditText
            android:id="@+id/et_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:background="@color/cardview_light_background"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="이메일"
            android:textSize="18sp"
            android:textColor="@color/txt_redbean_dark"
            android:fontFamily="@font/baemin_hanna_air"
            android:layout_margin="10dp"/>

    <EditText
            android:id="@+id/et_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:inputType="textPassword"
            android:ems="10"
            android:background="@color/cardview_light_background"
            android:hint="비밀번호"
            android:textSize="18sp"
            android:textColor="@color/txt_redbean_dark"
            android:fontFamily="@font/baemin_hanna_air"
            android:layout_margin="10dp"/>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

        <Button
                android:id="@+id/bt_CreateAccount"
                android:text="가입하기"
                android:textSize="16sp"
                android:fontFamily="@font/baemin_hanna_air"
                android:textColor="@color/redbean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="40dp"
                android:background="@drawable/bg_btn3"/>

        <Button
                android:id="@+id/bt_cancel"
                android:text="돌아가기"
                android:textSize="16sp"
                android:fontFamily="@font/baemin_hanna_air"
                android:textColor="@color/redbean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:background="@drawable/bg_btn2"/>

    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"/>






</LinearLayout>