<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/themeColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/cardview_light_background"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/et_email0"
            android:hint="이메일 입력"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginBottom="23dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/et_password0"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_password0"

            android:background="@color/cardview_light_background"
            android:hint="비밀번호 입력"
            app:layout_constraintStart_toStartOf="@+id/et_email0" app:layout_constraintTop_toBottomOf="@+id/et_email0"
            android:layout_marginBottom="33dp" app:layout_constraintBottom_toTopOf="@+id/bt_login"/>
    <Button
            android:text="로그인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_login"
            app:layout_constraintStart_toStartOf="@+id/bt_create"
            app:layout_constraintTop_toBottomOf="@+id/et_password0" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/bt_create"/>
    <Button
            android:text="회원가입"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_create"
            app:layout_constraintStart_toStartOf="@+id/bt_logout" app:layout_constraintTop_toBottomOf="@+id/bt_login"
            android:layout_marginBottom="9dp" app:layout_constraintBottom_toTopOf="@+id/bt_logout"/>
    <Button
            android:text="로그아웃"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_logout"
            app:layout_constraintTop_toBottomOf="@+id/bt_create" android:layout_marginBottom="18dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/tv_message"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text=""
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/tv_message"
            app:layout_constraintTop_toBottomOf="@+id/bt_logout" android:layout_marginBottom="69dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="312dp"
            android:layout_height="180dp" app:srcCompat="@drawable/login"
            android:id="@+id/imageView3" android:scaleType="centerCrop"
            android:layout_marginTop="73dp"
            android:layout_marginBottom="83dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/et_email0" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="49dp"
            android:layout_marginStart="49dp" android:layout_marginEnd="49dp" android:layout_marginRight="49dp"/>


</android.support.constraint.ConstraintLayout>