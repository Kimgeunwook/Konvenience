<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/themeColor"
        android:layout_height="match_parent"
        tools:context=".Menu">

    <Button
            android:text="공지사항"
            android:layout_width="181dp"
            android:background="@drawable/bg_btn2"
            android:fontFamily="@font/baemin_hanna"
            android:layout_height="75dp"
            android:textColor="@color/txt_green"
            android:textSize="30sp"
            android:id="@+id/button1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="216dp"/>
    <Button
            android:text="민원"
            android:layout_width="181dp"
            android:layout_height="75dp"
            android:textColor="@color/txt_green"
            android:textSize="30sp"
            android:fontFamily="@font/baemin_hanna"
            android:background="@drawable/bg_btn2"
            android:id="@+id/button2"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="273dp"
            android:layout_height="166dp" app:srcCompat="@drawable/logo_transparent"
            android:id="@+id/imageView2" android:scaleType="centerCrop" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="87dp"
            android:layout_marginBottom="168dp" app:layout_constraintBottom_toTopOf="@+id/button1"/>
</android.support.constraint.ConstraintLayout>