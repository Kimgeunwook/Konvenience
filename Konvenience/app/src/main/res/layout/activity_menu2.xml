<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_grain"
        tools:context=".Menu">

    <ImageView
            android:layout_marginTop="70dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/string1"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

        <Button
                android:id="@+id/button1"
                android:background="@drawable/notice_ss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:layout_marginRight="20dp"/>

        <Button
                android:id="@+id/button2"
                android:background="@drawable/minwon_ss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

        <TextView
                android:text="공지사항"
                android:textAlignment="textEnd"
                android:paddingRight="55dp"
                android:textColor="@color/txt_green"
                android:textSize="20sp"
                android:fontFamily="@font/baemin_hanna_air"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" android:layout_gravity="end"/>

        <TextView
                android:text="민원"
                android:textAlignment="textStart"
                android:paddingLeft="55dp"
                android:textColor="@color/txt_green"
                android:textSize="20sp"
                android:fontFamily="@font/baemin_hanna_air"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" android:layout_gravity="start"/>

    </LinearLayout>


</LinearLayout>